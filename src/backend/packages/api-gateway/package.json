{
  "name": "@projectx/api-gateway",
  "version": "1.0.0",
  "private": true,
  "description": "API Gateway service for routing, authentication, and security of backend microservices",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepare": "husky install",
    "security:audit": "npm audit",
    "docker:build": "docker build -t api-gateway .",
    "docker:run": "docker run -p 3000:3000 api-gateway"
  },
  "dependencies": {
    "@elastic/elasticsearch": "8.9.0",
    "@nestjs/cache-manager": "2.0.0",
    "@nestjs/common": "10.0.0",
    "@nestjs/jwt": "10.1.0",
    "@nestjs/swagger": "7.1.0",
    "@nestjs/throttler": "5.0.0",
    "@projectx/common": "1.0.x",
    "@projectx/monitoring": "1.0.0",
    "@projectx/security": "1.x",
    "@projectx/security-utils": "1.0.0",
    "@projectx/token-service": "1.0.0",
    "@projectx/validators": "1.0.0",
    "@sendgrid/mail": "7.7.0",
    "argon2": "0.31.0",
    "auth0": "3.6.0",
    "axios": "1.4.0",
    "bcryptjs": "2.4.3",
    "bull": "4.11.3",
    "celebrate": "15.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.x",
    "compression": "1.7.x",
    "cors": "2.8.x",
    "crypto-js": "^4.1.1",
    "dd-trace": "3.32.0",
    "dotenv": "^16.0.0",
    "express": "4.18.2",
    "express-error-handler": "1.1.x",
    "express-jwt": "8.4.1",
    "express-rate-limit": "6.9.x",
    "express-sanitizer": "1.0.6",
    "express-timeout-handler": "2.2.2",
    "express-validator": "7.0.1",
    "helmet": "7.1.0",
    "http-status-codes": "2.2.0",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "ioredis": "5.3.2",
    "joi": "17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "1.10.x",
    "multer": "1.4.5-lts.1",
    "node-cache-manager": "^3.0.0",
    "opossum": "7.1.x",
    "otplib": "12.0.1",
    "pci-validator": "1.x",
    "pg": "8.11.0",
    "pino": "8.16.1",
    "plaid": "15.0.0",
    "prom-client": "14.2.0",
    "rate-limit-redis": "3.0.0",
    "rate-limiter-flexible": "2.4.1",
    "redis-lock": "^1.0.0",
    "routing-controllers": "0.10.x",
    "stripe": "13.4.0",
    "twilio": "4.19.0",
    "uuid": "9.0.0",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "4.7.1",
    "zod": "^3.22.0",
    "zxcvbn": "4.4.2"
