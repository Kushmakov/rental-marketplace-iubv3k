<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Material Design 3.0 Theme Implementation
    Package: com.google.android.material:material:1.9.0
    
    Defines application-wide styles and themes following Material Design guidelines with:
    - Dynamic color system support
    - Light/Dark theme variants
    - Accessibility compliance (WCAG 2.1 Level AA)
    - RTL layout support
    - Consistent component styling
-->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme -->
    <style name="Theme.ProjectX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color system -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorError">@color/error</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.ProjectX.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.ProjectX.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.ProjectX.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.ProjectX.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.ProjectX.Caption</item>

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.ProjectX.Button.Primary</item>
        <item name="materialCardViewStyle">@style/Widget.ProjectX.Card</item>
        <item name="textInputStyle">@style/Widget.ProjectX.TextField</item>
    </style>

    <!-- Typography styles -->
    <style name="TextAppearance.ProjectX.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.ProjectX.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.ProjectX.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineHeight">24sp</item>
    </style>

    <style name="TextAppearance.ProjectX.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.ProjectX.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineHeight">16sp</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.ProjectX.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/btn_primary_background</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:padding">@dimen/spacing_unit_2x</item>
        <item name="android:stateListAnimator">@animator/button_state_list_animator</item>
        <item name="android:elevation">@dimen/card_elevation</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <style name="Widget.ProjectX.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/btn_secondary_background</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:padding">@dimen/spacing_unit_2x</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <!-- TextField style -->
    <style name="Widget.ProjectX.TextField" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:background">@drawable/text_field_background</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:padding">@dimen/spacing_unit_2x</item>
        <item name="android:textColorHint">@color/text_secondary_light</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/card_corner_radius</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <!-- Card style -->
    <style name="Widget.ProjectX.Card" parent="Widget.Material3.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
        <item name="rippleColor">@color/ripple_light</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/outline</item>
        <item name="contentPadding">@dimen/card_content_padding</item>
        <item name="android:stateListAnimator">@animator/card_state_list_animator</item>
    </style>

</resources>