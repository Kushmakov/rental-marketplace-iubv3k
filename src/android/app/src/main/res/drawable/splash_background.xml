<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Splash Screen Background Drawable
    Material Design 3.0 Implementation
    
    Features:
    - Theme-aware background colors
    - Centered logo with proper scaling
    - Dynamic color tinting
    - Supports all screen densities
    - Optimized for quick loading
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background layer using theme-aware surface color -->
    <item>
        <color android:color="?attr/colorSurface" />
    </item>

    <!-- Centered logo with proper scaling and tinting -->
    <item
        android:width="120dp"
        android:height="120dp"
        android:gravity="center">
        <bitmap
            android:src="@drawable/ic_launcher_foreground"
            android:gravity="fill"
            android:tint="?attr/colorPrimary"
            android:tintMode="src_in" />
    </item>

</layer-list>