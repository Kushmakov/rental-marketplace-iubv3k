  "devDependencies": {
    "@jest/globals": "29.6.0",
    "@jest/types": "29.6.0",
    "@opentelemetry/api": "1.7.0",
    "@testing-library/database-mock": "1.0.0",
    "@testing-library/jest-dom": "5.16.5",
    "@types/bcryptjs": "2.4.2",
    "@types/bull": "4.10.0",
    "@types/compression": "1.7.4",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.3",
    "@types/jsonwebtoken": "9.0.2",
    "@types/morgan": "1.9.4",
    "@types/multer": "1.4.7",
    "@types/node": "18.15.0",
    "@types/pg": "8.10.2",
    "@types/redis": "4.0.11",
    "@types/supertest": "2.0.16",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "8.54.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-mock": "29.5.0",
    "jest-mock-extended": "3.0.4",
    "mongodb-memory-server": "8.13.0",
    "nock": "13.3.3",
    "nodemon": "3.0.1",
    "prettier": "3.1.0",
    "rimraf": "5.0.1",
    "stripe-mock": "2.x",
    "supertest": "6.3.3",
    "testcontainers": "9.9.1",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "api-gateway",
    "microservices",
    "authentication",
    "security"
  ],
  "author": "Project X Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/projectx/api-gateway.git"
  }
}